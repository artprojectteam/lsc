@charset "UTF-8"
@require "_assets/_init.styl"

//*********** initialize ***************//
@require "~bootstrap/dist/css/bootstrap-reboot.min.css"
@require "_assets/modules/_reset.styl"

json('const/media-query.json')
json('const/base.json')

//*********** layouts ***************//
.apps
  display: grid
  width: 100%
  min-height: 100%
  grid-template-rows: 50px 1fr 50px
  grid-gap: space-mobile
  @media tablet
    grid-gap: space-tablet
    grid-template-rows: 80px 1fr 80px
  @media desktop
    grid-template-rows: 80px 1fr 100px

  &-header
    safe-area('top')
    safe-area('left')
    safe-area('right')
    background: #eeeeee

    & ^[0]-stretch
    & ^[0]-container
      height: 100%

  &-footer
    safe-area('bottom')
    safe-area('left')
    safe-area('right')
    background: color-blue
    color: #ffffff

    & ^[0]-stretch
    & ^[0]-container
      height: 100%

  &-stretch
    padding: 0 10px
    @media tablet
      padding: 0 space-tablet

  &-container
    max-width: 1200px
    margin: 0 auto
